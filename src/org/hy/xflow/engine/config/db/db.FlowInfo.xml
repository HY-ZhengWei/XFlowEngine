<?xml version="1.0" encoding="UTF-8"?>

<config>

	<import name="sqls"            class="java.util.ArrayList" />
	<import name="sqlGroup"        class="org.hy.common.xml.plugins.XSQLGroup" />
	<import name="sql"             class="org.hy.common.xml.XSQL" />



    <!-- 工作流信息表模块的相关SQL -->
	<sqls>
	
		<sql id="XSQL_XFlow_FlowInfo_QueryByServiceDataID"> 
		
			<dataSourceGroup ref="DSG_XFlow" />
			
			<content>
				<![CDATA[
				SELECT  A.workID
				       ,A.workFatherID
				       ,A.flowTemplateID
				       ,A.serviceDataID
				       ,A.createrID
				       ,A.creater
				       ,A.createOrgID
				       ,A.createOrg
				       ,A.createTime
				       ,A.lastUserID
				       ,A.lastUser
				       ,A.lastTime
				       ,A.lastOrgID
				       ,A.lastOrg
				       ,A.lastProcessID
				       ,A.isValid
				       ,A.isDelete
				  FROM  TFlowInfo  A
				 WHERE  A.serviceDataID = ':serviceDataID'
				]]>
			</content>
			
			<result>
				<row>org.hy.xflow.engine.bean.FlowInfo</row>
				<cfill>setter(colValue)</cfill>
			</result>
			
		</sql>
		
		
		
		<sql id="XSQL_XFlow_FlowInfo_Insert"> 
		
			<dataSourceGroup ref="DSG_XFlow" />
			
			<content>
				<![CDATA[
				INSERT  INTO TFlowInfo
				       (
				        workID
				       ,workFatherID
				       ,flowTemplateID
				       ,serviceDataID
				       ,createrID
				       ,creater
				       ,createOrgID
				       ,createOrg
				       ,createTime
				       ,lastUserID
				       ,lastUser
				       ,lastTime
				       ,lastOrgID
				       ,lastOrg
				       ,lastProcessID
				       ,isValid
				       ,isDelete
				       )
                VALUES (
                        ':flow.workID'
				       ,':flow.workFatherID'
				       ,':flow.flowTemplateID'
				       ,':flow.serviceDataID'
				       ,':flow.createrID'
				       ,':flow.creater'
				       ,':flow.createOrgID'
				       ,':flow.createOrg'
				       ,':flow.createTime'
				       ,':flow.lastUserID'
				       ,':flow.lastUser'
				       ,':flow.lastTime'
				       ,':flow.lastOrgID'
				       ,':flow.lastOrg'
				       ,':flow.lastProcessID'
				       , :flow.isValid
				       , :flow.isDelete
                       )
				]]>
			</content>
			
		</sql>
		
	</sqls>
	
</config>