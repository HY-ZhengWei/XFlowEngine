<?xml version="1.0" encoding="UTF-8"?>

<config>

	<import name="sqls"            class="java.util.ArrayList" />
	<import name="sqlGroup"        class="org.hy.common.xml.plugins.XSQLGroup" />
	<import name="sql"             class="org.hy.common.xml.XSQL" />



    <!-- 工作流过程表模块的相关SQL -->
	<sqls>
	
		<sql id="XSQL_XFlow_Process_Insert"> 
		
			<dataSourceGroup ref="DSG_XFlow" />
			
			<content>
				<![CDATA[
				INSERT  INTO TProcess
				       (
				        processID
				       ,workID
				       ,serviceDataID
				       ,splitProcessID
				       ,processNo
				       ,currentActivityID
				       ,currentActivityName
				       ,previousProcessID
				       ,previousActivityID
				       ,previousActivityName
				       ,nextProcessID
				       ,nextActivityID
				       ,nextActivityName
				       ,createrID
				       ,creater
				       ,createOrgID
				       ,createOrg
				       ,createTime
				       ,limitUserID
				       ,limitOrgID
				       ,limitTime
				       ,operateTime
				       ,operateTimeLen
				       ,operateTypeID
				       ,operateType
				       ,operateUserID
				       ,operateUser
				       ,operateOrgID
				       ,operateOrg
				       ,operateFiles
				       ,operateDatas
				       ,infoComment
				       )
				VALUES (
				        ':process.processID'
				       ,':process.workID'
				       ,':process.serviceDataID'
				       ,':process.splitProcessID'
				       , :process.processNo
				       ,':process.currentActivityID'
				       ,':process.currentActivityName'
				       ,':process.previousProcessID'
				       ,':process.previousActivityID'
				       ,':process.previousActivityName'
				       ,':process.nextProcessID'
				       ,':process.nextActivityID'
				       ,':process.nextActivityName'
				       ,':process.createrID'
				       ,':process.creater'
				       ,':process.createOrgID'
				       ,':process.createOrg'
				       ,':process.createTime'
				       ,':process.limitUserID'
				       ,':process.limitOrgID'
				       ,':process.limitTime'
				       ,':process.operateTime'
				       , :process.operateTimeLen
				       ,':process.operateTypeID'
				       ,':process.operateType'
				       ,':process.operateUserID'
				       ,':process.operateUser'
				       ,':process.operateOrgID'
				       ,':process.operateOrg'
				       ,':process.operateFiles'
				       ,':process.operateDatas'
				       ,':process.infoComment'
				       )
				]]>
			</content>
			
			<comment>新增工作流流转过程</comment>
			
		</sql>
		
		
		
		<sql id="XSQL_XFlow_Process_UpdatePrevious"> 
		
			<dataSourceGroup ref="DSG_XFlow" />
			
			<content>
				<![CDATA[
				UPDATE  TProcess
				   SET  nextProcessID    = ':previous.nextProcessID'       
				       ,nextActivityID   = ':previous.nextActivityID'      
				       ,nextActivityName = ':previous.nextActivityName'    
				       ,operateTime      = ':previous.operateTime'         
				       ,operateTimeLen   =  :previous.operateTimeLen       
				       ,operateTypeID    = ':previous.operateTypeID'       
				       ,operateType      = ':previous.operateType'         
				       ,operateUserID    = ':previous.operateUserID'       
				       ,operateUser      = ':previous.operateUser'         
				       ,operateOrgID     = ':previous.operateOrgID'        
				       ,operateOrg       = ':previous.operateOrg'                   
				 WHERE  processID        = ':previous.processID'
				]]>
			</content>
			
			<comment>更新前一个工作流流转过程</comment>
		</sql>
		
		
		
		<sql id="XSQL_XFlow_Process_QueryByWorkID_ServiceDataID"> 
		
			<dataSourceGroup ref="DSG_XFlow" />
			
			<content>
				<![CDATA[
				SELECT  A.processID
				       ,A.workID
				       ,A.serviceDataID
				       ,A.splitProcessID
				       ,A.processNo
				       ,A.currentActivityID
				       ,A.currentActivityName
				       ,A.previousProcessID
				       ,A.previousActivityID
				       ,A.previousActivityName
				       ,A.nextProcessID
				       ,A.nextActivityID
				       ,A.nextActivityName
				       ,A.createrID
				       ,A.creater
				       ,A.createOrgID
				       ,A.createOrg
				       ,A.createTime
				       ,A.limitUserID
				       ,A.limitOrgID
				       ,A.limitTime
				       ,A.operateTime
				       ,A.operateTimeLen
				       ,A.operateTypeID
				       ,A.operateType
				       ,A.operateUserID
				       ,A.operateUser
				       ,A.operateOrgID
				       ,A.operateOrg
				       ,A.operateFiles
				       ,A.operateDatas
				       ,A.infoComment
				  FROM  TProcess  A
			<[   WHERE  A.workID        = ':workID'          ]>
			<[   WHERE  A.serviceDataID = ':serviceDataID'   ]>
				 ORDER  BY A.createTime DESC
				]]>
			</content>
			<!-- 先按CreateTime倒排，之后将要改为按processNo倒排的 -->
			
			<result>
				<row>org.hy.xflow.engine.bean.FlowProcess</row>
				<cfill>setter(colValue)</cfill>
			</result>
			
		</sql>
		
	</sqls>
	
</config>